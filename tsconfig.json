{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@ssweet/*": ["packages/*/src"],
      "*": ["node_modules", "packages"]
    }
  },

  "include": ["packages"],
  "exclude": ["node_modules", "packages/**/dist", "react-native"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}